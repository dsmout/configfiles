<menu id="root-menu" label="Openbox 3.5">

<separator label="ArchBang"/>

<item label="Terminal"><action name="Execute"><execute>mate-terminal</execute></action></item>
<item label="Browser"><action name="Execute"><execute>firefox</execute></action></item>
<item label="File Manager"><action name="Execute"><execute>caja</execute></action></item>
<item label="Editor"><action name="Execute"><execute>pluma</execute></action></item>

